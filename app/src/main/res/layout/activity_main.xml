<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context="com.example.apoorvaagupta.livewhiteboard.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
       android:layout_weight="1"
        android:layout_marginBottom="5dp">
        <TextView
            android:id="@+id/tvStartNewSession"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:background="@android:color/holo_red_light"
            android:text="Start A New Session"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="32sp"/>
        <TextView
            android:id="@+id/tvJoinExistingSession"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_green_light"
            android:layout_marginLeft="5dp"
            android:text="Join Existing Session"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="32sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/tvCreateNewDrawing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_light"
            android:layout_marginRight="5dp"
            android:text="Create A New Drawing"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="32sp"/>
        <TextView
            android:id="@+id/tvOpenSavedDrawings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_light"
            android:layout_marginLeft="5dp"
            android:text="Open Saved Drawings"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="32sp"/>

    </LinearLayout>

</LinearLayout>
